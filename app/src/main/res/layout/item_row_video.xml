<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_itemVideo"
        android:layout_width="@dimen/item_row_video_width"
        android:layout_height="@dimen/item_row_video_height"
        android:layout_margin="8dp"
        android:src="@color/colorSilver"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/imageView_itemVideo"
        android:layout_toRightOf="@id/imageView_itemVideo"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView_itemVideo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="4dp"
            android:textSize="@dimen/item_row_title"
            tools:text="Hans Zimmer - Interstellar" />

        <TextView
            android:id="@+id/textView_itemVideo_author"
            android:layout_width="wrap_content"
            tools:text="Marijan Piano"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_row_author" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView_itemVideo_timePast"
                android:layout_width="wrap_content"
                tools:text="4 years ago"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_row_author" />

            <TextView
                android:id="@+id/textView_itemVideo_watchNb"
                android:layout_width="wrap_content"
                tools:text="96K views"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_row_author" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>